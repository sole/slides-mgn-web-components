@import 'prism/themes/prism-okaidia.css'

text_color = #444
stripe_color1 = #fff
stripe_color2 = #efefef
stripe_width = 50px
stripe_half_width = stripe_width / 2

body
	color: text_color
	background: #fefefe
	font-size: 1.5rem
	font-family: 'Fjalla One', 'Cantarell', 'Helvetica Neue', sans;

article
	background-image: repeating-linear-gradient(135deg, stripe_color1, stripe_color1 stripe_half_width, stripe_color2 stripe_half_width, stripe_color2 stripe_width);
	background-attachment: fixed;

// Stop rotating, damn cube
.bespoke-before, .bespoke-after, .bespoke-slide
	transform: none

strong
	color: #666

h1, h2, h3, ul
	margin: 0
	margin-bottom: 1rem

/*h1
	margin-bottom: 1rem
*/
ul
	margin-bottom: 1.5rem
	
h1, h2, h3, ul, li
	color: #888
	text-align: left
	width: 100%

h1, h2
	font-family: 'Fjalla One'
	text-transform: uppercase
	font-weight: 700

h3
	font-weight: 700
	text-transform: uppercase

tt
	text-transform: none
	
h1
	color: #000
	font-size: 3.8rem
	line-height: 1
h2
	color: #444
	font-size: 2.8rem
	line-height: 1
	
h3
	color: #666
	font-size: 2.1rem
	line-height: 1.1

li
	line-height: 1.3
	margin: 0

a
	xcolor: yellow

.bespoke-slide
	background: #fff
	box-shadow: 1px 1px 10px rgba(0, 0, 0, 0.3)

.cover .bespoke-slide
	background: transparent
	box-shadow: none

img
	max-width: 100%
	height: auto

li:before
	content: "-"
	text-shadow: none
	font-size: 1rem
	padding-right: 0.5rem

tt
	font-style: normal // italicised code doesn't look cool

pre, code
	line-height: 1

.cover
	background-position: center;
	background-size: cover;

.cover .bespoke-slide > *
	padding: 15px


// bespoke-state styles
// AKA when sole went all mad about grids and borders

text_color = #111
fancy_border_style = 20px solid text_color
fancy_border_padding = 15px
fancy_border2_style = 10px solid text_color
fancy_border2_padding = 40px

	
.title h1
	border-top: fancy_border2_style
	border-bottom: fancy_border2_style
	padding: 5px
	padding-top: fancy_border2_padding
	padding-bottom: fancy_border2_padding - 5px
	background: #fff
	

